	name = Atsushi Sakai
[color]
	ui = auto
[core]
	editor = vim -c \"set fenc=utf-8\"
	autocrlf = input
	quotepath = false
[merge]
	tool = vimdiff
	conflictstyle = diff3
	ff = false
[mergetool]
	prompt = false
	keepBackup = false
[push]
	default = simple
[github]
	user = AtsushiSakai
[diff]
	ignoreSubmodules = dirty
[alias]
    c = commit -av
    p = !git push origin `git rev-parse --abbrev-ref HEAD`
    wdiff = diff --color-words
    force-pull = !git fetch && git reset --hard origin/`git rev-parse --abbrev-ref HEAD`
[pull]
	ff = only
